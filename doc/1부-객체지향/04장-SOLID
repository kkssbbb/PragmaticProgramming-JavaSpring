    @Override
    public void fly() {
        throw new UnsupportedOperationException("ν­κ·„μ€ λ‚  μ μ—†μµλ‹λ‹¤");
        // Birdλ¥Ό PenguinμΌλ΅ μΉν™ν–μ„ λ• μμ™Έ λ°μƒ
        // κΈ°λ³Έ ν΄λμ¤μ κ³„μ•½(λ‚  μ μλ‹¤)μ„ μ„λ°
    }
}

// LSP μ μ© μμ‹

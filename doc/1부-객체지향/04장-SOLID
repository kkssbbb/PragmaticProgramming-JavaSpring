    public void move() { fly(); }
    protected void fly() { /* λ‚ κΈ° κµ¬ν„ */ }
}

class SwimmingBird extends Bird {
    public void move() { swim(); }
    protected void swim() { /* μμ κµ¬ν„ */ }
}

